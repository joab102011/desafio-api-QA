{
  "name": "desafio-api-qa",
  "version": "1.0.0",
  "description": "Projeto de automação de testes de API utilizando Cypress",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run --env allure=true",
    "cy:run:headed": "cypress run --headed --env allure=true",
    "test:api": "cypress run --spec 'cypress/e2e/api/**/*.cy.js' --env allure=true",
    "test:api:allure": "npm run test:api && npm run allure:generate",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": [
    "cypress",
    "api",
    "testes",
    "automacao"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^13.6.0",
    "@shelex/cypress-allure-plugin": "^2.40.2",
    "allure-commandline": "^2.24.1"
  }
}

